exec ~/.fehbg &
numlockx &
{{ if (eq .chezmoi.hostname "laptop-arch") }}
fusuma &
{{ end }}

{{ if (eq .chezmoi.hostname "desktop-arch") }}
ckb-next -b &
{{ end }}

/usr/bin/dunst &
xrdb /home/xander/.Xresources

clipster -d &

{{ if (eq .chezmoi.hostname "laptop-arch") }}
